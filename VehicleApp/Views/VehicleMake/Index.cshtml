@model VehicleApp.Models.VehicleMakeViewModels.IndexViewModel

@{ 
    ViewData["Title"] = "Manage Vehicle Makes";
}

<h2>Vehicle Makes</h2>

<p>
    <a asp-action="Create">Add new vehicle make</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions">
        <p>
            Find by name or abbreviation: <input type="text" name="SearchString" value="@ViewData["SearchParameter"]"/>
            <input type="submit" value="Search" class="btn btn-default"/> |
            <a asp-action="Index">Back to vehicle list</a>
        </p>
    </div>
</form>

<div class="panel panel-default vehicle-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParameter"]">@Html.DisplayNameFor(model => model.Name)</a>
                </th>
                <th>
                    <a asp-action="Index" asp-route-sortOrder="@ViewData["AbrvSortParameter"]">@Html.DisplayNameFor(model => model.Abrv)</a>
                </th>
            </tr>
        </thead>

        @foreach (var vehicleMake in Model.VehicleMakes)
        {
            <tr>
                <td>@vehicleMake.Name</td>
                <td>@vehicleMake.Abrv</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@vehicleMake.VehicleMakeId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@vehicleMake.VehicleMakeId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@vehicleMake.VehicleMakeId">Delete</a>
                </td>
            </tr>
        }
    </table>
    </div>

  

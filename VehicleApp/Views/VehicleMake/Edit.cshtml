@model VehicleApp.Models.VehicleMakeViewModels.EditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Vehicle Make</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateVehicleMake" asp-controller="VehicleMake">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleModels" class="control-label"></label>
                <input asp-for="VehicleModels" class="form-control" />
                <span asp-validation-for="VehicleModels" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Vehicle Makes List</a>
</div>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

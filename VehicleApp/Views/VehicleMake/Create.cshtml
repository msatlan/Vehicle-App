@model VehicleApp.Models.VehicleMakeViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create";
 }

<h2>Add New Vehicle Make</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddNewVehicleMake" method="get">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Abrv, "Abbreviation")

                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
                <!--input type="submit" value="Cancel" class="btn btn-default" asp-action="Index" />-->
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Vehicle Make List</a>
</div>

